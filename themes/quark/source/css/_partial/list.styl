.index_list {
  text-align: left;
  margin: 1rem 0 6rem 0;

  .line_1 {
    display: inline;

    .index_post_date {
      font-weight: bold;
      font-size: 0.9rem;
    }
  }

  .index_post_title {
    font-weight: bold;
    font-size: 2.2rem;
  }

  .blank {
    margin: 1rem auto;
    width: 100%;
    display: flex;
    align-items: center;

    .index_post_tag {
      padding: 0.3% 1.5%;
      margin-right: 3%;
      border: 0.15rem #B64444 solid;
      border-radius: 0.5rem;
      font-weight: bold;
    }
  }

  .index_post_excerpt {
    font-size: 1.15rem;
  }

}

.page_num {
  item-align: center;
  display: flex;
  flex-direction: row;
  justify-content: center;

  .page_item {
    margin: 0 1rem 1rem 0;
  }
}
